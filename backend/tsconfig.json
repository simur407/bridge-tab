{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitReturns": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["modules/*"],
      "@packages/*": ["packages/*"],
      "@bridge-tab/*": ["*"]
    }
  },
  "compileOnSave": true,
  "include": ["packages", "modules", "src"]
}
